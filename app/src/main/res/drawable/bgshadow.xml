<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#338F8F8F" /> <!-- Adjust the alpha value as needed for the shadow color -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Background -->
    <item android:bottom="5dp" android:right="5dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/card1" /> <!-- Adjust the background color -->
        <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
    </shape>
</item>

    </layer-list>
